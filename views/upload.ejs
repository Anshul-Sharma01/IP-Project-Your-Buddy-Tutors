<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload Lecture</title>
    <link rel="stylesheet" href="upload_video.css" />
  </head>
  <body>
    <%- include("nav.ejs") %>
    <section class="upload">
      <div class="left_section">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <label for="title">Title : </label>
          <input type="text" name="course" id="title" />
          <br />
          <br />
            
          <label for="lbl">Label : </label>
          <input type="text" name="label" id="lbl" />
          <br />
          <br />
          <label for="desc">Description : </label>
          <input type="text" name="desc"/>
          <br />
          <br />
          <label for="category">Category : </label>
          <input type="text" id="category" name="category" />
          <br />
          <br />
          <label for="paid">Price : </label>
          <input type="password"  id="paid" name="paid" />
          <br />
          <br />
          <label for="hours">Total No. of Hours : </label>
          <input type="number" id="hours" name="hourse">
          <br><br>
          <label for="no_of_lec">Number of Lectures : </label>
          <input type="number" value="5" name="no_of_lec" /><br>
          <input type="file"  name="img" />
     
        <div class="btns">
          <a href="profile.html">
            <button>Go Back</button>
          </a>
          <button type="submit">Upload Video</button>
          <!-- <input type="submit" /> -->
        </div>
      </div>
      <div class="right_section">
        <div class="input-div">
          <!-- <input class="input" name="file" type="file" /> -->
        
          <input type="file" name="video" class="input" accept="video/*" multiple />
             </form>
