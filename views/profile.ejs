<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>
    <link rel="stylesheet" href="profile.css" />
  </head>
  <body>
    <%- include("nav.ejs") %>
    <section class="first_profile_section">
      <div class="left_section">
        <a href="/edit_profile"><button>Edit Your Profile</button></a>
        <a href="/change_password"><button>Change Your Password</button></a>
        <a href="/upload"><button>Upload Video</button></a>
      </div>
      <div class="right_section">
        <div class="img_div">
          <img src="./user.png" alt="" />
        </div>

        <input
          title="Choose new Profile Picture"
          type="file"
          accept="image/*"
        />

        <form>
          <label>Name : </label>
          <input type="text" value="John Doe" />
          <br />
          <br />
          <label>E-mail : </label>
          <input type="text" value="someone@example.com" />
          <br />
          <br />
          <label>Ph-No : </label>
          <input type="number" value="1234567890" />
          <br /><br />
          <label>Bio : </label>
          <textarea rows="2" cols="40">Yo whatsup this is my bio</textarea>
        </form>
      </div>
    </section>
  </body>
</html>
